<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Kunnan nimi - Title -->
    <TextView
        android:id="@+id/txtKuntaNimi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:hint="Kunnan nimi"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Basic info about the region -->
    <TextView
        android:id="@+id/textPopulation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Asukasmäärä" />

    <!-- A link to Wikipedia or other source -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:autoLink="web"
        android:hint="Kunta Wikipediassa" />

    <!-- Political distribution title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Poliittinen jakauma:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView for political parties -->

    <!-- Weather information section -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPoliticalParties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Weather icon -->


        <!-- Weather details -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="84dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:hint="sää" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:hint="tuulen nopeus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="lämpötila" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
